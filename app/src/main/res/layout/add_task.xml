<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="400dp"
    android:gravity="center">

    //addTask_text

    //title_text

    //title

    <TextView
        android:id="@+id/addTask_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/arimo"
        android:text="Add Task"
        android:textColor="#5A5A5A"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="38dp"
        android:layout_height="24dp"
        android:fontFamily="@font/arimo"
        android:text="Title"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/radio_type"
        app:layout_constraintEnd_toStartOf="@+id/title"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.452" />

    <EditText
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:hint="Input title"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    //pos_text

    //pos

    <TextView
        android:id="@+id/pos_text"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:fontFamily="@font/arimo"
        android:text="Position"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/radio_type"
        app:layout_constraintEnd_toStartOf="@+id/pos"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/pos"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:hint="Input position"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161" />

    //radioGroup_text

    <TextView
        android:id="@+id/radioGroup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimo"
        android:text="Type"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/date_start"
        app:layout_constraintEnd_toStartOf="@+id/radio_type"
        app:layout_constraintHorizontal_bias="0.763"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintVertical_bias="1.0" />

    <RadioGroup
        android:id="@+id/radio_type"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginBottom="170dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radio_start"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:minHeight="48dp"
            android:text="start"
            android:textColor="#5A5A5A"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/radio_end"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:minHeight="48dp"
            android:text="end"
            android:textColor="#5A5A5A"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/radio_new"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:checked="true"
            android:minHeight="48dp"
            android:text="new"
            android:textColor="#5A5A5A"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/radio_old"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:minHeight="48dp"
            android:text="old"
            android:textColor="#5A5A5A"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck" />
    </RadioGroup>
    //radioGroup

    //date_text

    //date_start

    <TextView
        android:id="@+id/date_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/arimo"
        android:text="Start Date"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/time_text1"
        app:layout_constraintEnd_toStartOf="@+id/date_start"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_type"
        app:layout_constraintVertical_bias="0.052" />

    <EditText
        android:id="@+id/date_start"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:hint="Select date"
        android:onClick="dateClick"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349" />

    //time_text1

    //time_start

    <TextView
        android:id="@+id/time_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/arimo"
        android:text="Start Time"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/time_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_start"
        app:layout_constraintVertical_bias="0.155" />

    <EditText
        android:id="@+id/time_start"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:hint="Select time"
        android:onClick="timeClick"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/time_text1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454" />

    //date_text2


    //date_end

    <TextView
        android:id="@+id/date_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimo"
        android:text="End Date"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.569" />

    <EditText
        android:id="@+id/date_end"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:hint="Select date"
        android:onClick="dateClick"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.565" />

    //time_text2

    //time_end

    <TextView
        android:id="@+id/time_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/arimo"
        android:text="End Time"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/time_service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_start"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/time_end"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:hint="Select time"
        android:onClick="timeClick"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/time_text2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.676" />

    //time_text3

    //time_service

    <TextView
        android:id="@+id/time_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/arimo"
        android:text="Service Time"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_end"
        app:layout_constraintVertical_bias="0.444" />

    <EditText
        android:id="@+id/time_service"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:hint="Select time"
        android:minHeight="48dp"
        android:onClick="timeClick"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.792" />

    //desc_text

    //desc

    //Ok_Button

    <TextView
        android:id="@+id/desc_text"
        android:layout_width="90dp"
        android:layout_height="24dp"
        android:fontFamily="@font/arimo"
        android:text="Description"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/desc"
        app:layout_constraintHorizontal_bias="0.869"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_service"
        app:layout_constraintVertical_bias="0.02" />

    <EditText
        android:id="@+id/desc"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:hint="Input description"
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/Ok_Button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="222dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/baseline_done_black_36"
        tools:ignore="SpeakableTextPresentCheck" />

    //imageView2

    //imageView3

    //imageView4

    //imageView5

    //imageView6

    //imageView7

    //imageView8

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="27dp"
        android:layout_height="22dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/desc_text"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.865"
        app:srcCompat="@drawable/baseline_description_black_48" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/time_text3"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_schedule_black_48" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="21dp"
        android:layout_height="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/time_text2"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.667"
        app:srcCompat="@drawable/baseline_schedule_black_48" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/time_text1"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_schedule_black_48" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_marginTop="139dp"
        app:layout_constraintEnd_toStartOf="@+id/date_text1"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_today_black_48" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_marginTop="216dp"
        app:layout_constraintEnd_toStartOf="@+id/date_text1"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_today_black_48" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="22dp"
        android:layout_height="21dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup_text"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.269"
        app:srcCompat="@drawable/baseline_question_mark_black_48" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
